<h1>Listing companies</h1>
<%= form_tag(:companies, :method =>'get') do -%>

<%=select("company", "member_id", Member.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'None'})%>
<%= submit_tag 'Update', :class=>'iButtonL mTop10' %>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Schema name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.schema_name %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

